<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.studentbiodata.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_height="100dp"
            android:text="BIO-DATA"
            android:textStyle="bold"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:src="@drawable/blank_photo" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
            android:layout_width="200dp"
            android:textSize="15dp"
            android:layout_height="40dp"
            android:text="1) CANDIDATE NAME:"
            android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:id="@+id/etName"
                android:inputType="textPersonName"
                android:hint="Name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="200dp"
                android:textSize="15dp"
                android:layout_height="50dp"
                android:text="2) FATHER'S/HUSBAND'S NAME:"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:id="@+id/etForHName"
                android:inputType="textPersonName"
                android:hint="Name"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="3) FATHER'S/HUSBAND'S OCCUPATION:"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:id="@+id/etForHOccu"
                    android:inputType="textPersonName"
                    android:hint="Occupation"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="4) MOTHER'S NAME:"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etMomName"
                    android:textSize="15dp"
                    android:inputType="textPersonName"
                    android:hint="Name"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="5) MOTHER'S OCCUPATION:"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:id="@+id/etMomOccu"
                    android:inputType="textPersonName"
                    android:hint="Occupation"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="6) DATE OF BIRTH AND AGE:"
                    android:textStyle="bold"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/btnDOB"
                    android:text="pickDate"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:id="@+id/lvAgeView"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text=""
                    android:textStyle="bold"/>
                <TextView
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="50dp"
                android:text="25 years 5 months"
                    android:id="@+id/tvAge"
                android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="7) PRESENT ADDRESS:"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:id="@+id/etCurrAddress"
                    android:inputType="textPersonName"
                    android:hint="Address"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="8) PERMANENT ADDRESS:"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:id="@+id/etPermAddress"
                    android:inputType="textPersonName"
                    android:hint="Address"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="9) MOBILE NO:"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:id="@+id/etMobileNo"
                    android:inputType="numberDecimal"
                    android:hint="Mobile"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="10) Email Id:"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:id="@+id/etEmailId"
                    android:inputType="textEmailAddress"
                    android:hint="Email"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="11) Experience:"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:id="@+id/etExperience"
                    android:inputType="textPersonName"
                    android:hint="years"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="12) CASTE:"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:id="@+id/etCaste"
                    android:inputType="textPersonName"
                    android:hint="Caste"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="13) EXPERIENCE/DESIGNATION :"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:id="@+id/etDesignation"
                    android:inputType="textPersonName"
                    android:hint="Designation"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="14) WORK LOCATION :"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:id="@+id/etWorkLocation"
                    android:inputType="textPersonName"
                    android:hint="Work location"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="200dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:text="15) THREE REFERENCES:"
                    android:textStyle="bold"/>
            </LinearLayout>
            <GridView
                android:layout_width="match_parent"
                android:id="@+id/gvReferences"
                android:numColumns="5"
                android:layout_height="180dp"></GridView>
            <Button
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/btnSave"
                android:text="REGISTER"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
