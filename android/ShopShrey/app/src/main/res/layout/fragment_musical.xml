<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shopshrey.MusicalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/llMusicalGridViewLoading"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"></LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:id="@+id/ivMusicalGridViewLoading"
            android:src="@drawable/loading"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/llMusicalGridView"
        android:orientation="vertical">
    <GridView
            android:layout_width="match_parent"
            android:id="@+id/gdMusical"
            android:visibility="visible"
            android:numColumns="2"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llMusicalError">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMusicalServerError"
            android:textSize="23dp"
            android:textColor="#0000ff"
            android:textStyle="italic"
            android:paddingLeft="23dp"
            android:paddingTop="150dp"
            android:layout_gravity="center"
            android:text="........Internet is not connected And Server Connection is not available......."/>
    </LinearLayout>

</FrameLayout>




