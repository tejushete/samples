<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llBaseView"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
                android:layout_width="88dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/silksaree"
                android:layout_gravity="center"
                android:id="@+id/ivWishImage" />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text="Shree Creation Embroidered Bollywood Poly Silk Sari"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:id="@+id/tvWishProductName"
                android:textSize="13dp"
                android:textColor="#ff0000ff"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:layout_height="30dp">
                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/rupee"
                    android:layout_height="30dp" />

                <TextView
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:fontFamily="monospace"
                    android:id="@+id/tvWishProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="999"/>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rating"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/tvWishProductRating"
                    android:gravity="center_vertical"
                    android:text="3.4"/>
            </LinearLayout>
        </LinearLayout>
        <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="#ffffffff"
                app:srcCompat="@drawable/delete"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:id="@+id/ibWishListDelete" />
    </LinearLayout>



</LinearLayout>

