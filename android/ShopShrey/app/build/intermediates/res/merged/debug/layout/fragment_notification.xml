<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shopshrey.NotificationFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/h1">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:paddingTop="20dp"

        app:srcCompat="@drawable/not"
        android:id="@+id/imageView4" />

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical">

    <TextView
        android:text="Welcome to ShopShrey!!"
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:clickable="true"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textColor="#0F0F0F"
        android:layout_height="50dp"
        android:id="@+id/tv1"
         />
    <TextView
        android:text="This is where you will see your personalized order updates and price drops"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_weight="1" />
       </LinearLayout>
</LinearLayout>


</FrameLayout>
