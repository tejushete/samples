<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shopshrey.WishlistFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llNoWishList"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/empty_wishlist"
            android:scaleType="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="No items added to wishlist!"
            android:textStyle="bold|italic"
            android:textColor="#ffff00ff"
            android:textSize="28dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"></LinearLayout>
        <Button
            android:text="Shop Now"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#ff0000AA"
            android:textColor="#ffffffff"
            android:layout_height="40dp"
            android:id="@+id/btnShopNow" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/llWishListViewHolder"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lvWish"
            android:layout_alignParentLeft="true"
            android:layout_height="470dp">
        </ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#4CAF50"
            android:orientation="horizontal"
            android:id="@+id/llButtons"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"


                android:textStyle="bold"
                android:textColor="#0000ff"
                android:id="@+id/btnClearAll"
                android:text="Clear All"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>








