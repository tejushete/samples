<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shopshrey.SignUpActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#23338A"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="130dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textStyle="italic"
                    android:textColor="#ffffff"
                    android:minLines="1"
                    android:maxLines="5"
                    android:singleLine="false"
                    android:gravity="fill"
                    android:text="Your number is safe with us.We wont share your details with anyone"
                    />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/account_shop"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:hint="Mobile no."
                android:layout_marginRight="10dp"
                    android:inputType="numberDecimal"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:layout_height="70dp" />




            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/btnSignSignUp"
                android:background="#FF7F00"
                android:text="SIGN UP"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="#ffffff"
                android:textColor="#23338A"
                android:textSize="13dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btnExistingUser"
                android:text="Exsting User? SIGN IN"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
